@model Medex.Models.WorkHour;


<form id="contactus"asp-controller="Doctor" asp-action="Edit" method="post" enctype="multipart/form-data" class="text-center p-3">
    <input asp-for="Id" hidden />
    <div class="form-group text-center  text-success mb-5">
        <h1>Work Hour</h1>
        <p>This is the Doctor's work hour set up.  Patient or Doctor can access each other at anytime from anywhere in the world.</p>
    </div>
    <div class="form-group">
        <label asp-for="WeekDays" class="control-label"></label>
        <input asp-for="Id" hidden/>
        <select asp-for="WeekDays" class="form-control w-50 offset-3 text-center select" asp-items="@(new SelectList(@ViewBag.DaysOfTheWeek, "Id", "Name"))"> </select>
    </div>
    <div class="form-group">
        <label asp-for="StartTime" class="control-label"></label>
        <input asp-for="StartTime" type="time" class="form-control w-50 offset-3 text-center" required />
    </div>
    <div class="form-group">
        <label asp-for="EndTime" class="control-label"></label>
        <input asp-for="EndTime" type="time" class="form-control w-50 offset-3 text-center" required />
    </div>
   
    <div class="form-group text-center">
        <button  type="submit" class="btn shadow w-25" >Update</button>
    </div>
    <div class="form-group offset-11">
        <a asp-action="WorkHourSetUp">Back</a>
    </div>
</form>
@model IEnumerable<Medex.Models.Doctor>
@{
    ViewData["Title"] = "ViewRegister";
}

<div class="container">
    <div class="row">
        <div class="col text-center m-3 p-3">
            <h1><i class="fa fa-user-md"></i></h1>
            <h1>Search Doctor</h1>
            <p> Sign-In/Register to login using your email address as ID and your Password set during registration. It will open your selected doctor’s calendar</p>
        </div>
    </div>
</div>

<hr />

<div class="container">
    <div class="row">

        @if (Model != null && Model.Count() > 0)
        {
        @foreach (var doctor in Model)
        {
            <div class="col p-3 ">
                <div class="card" style="width: 18rem; font-weight:bolder">
                    <img style="max-height:185px; " class="card-img-top rounded-circle" src="@doctor.ProfilePicture" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text"><i class="fa fa-user-md"> : @doctor.FirstName, @doctor.LastName</i> </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="fa fa-phone"> : @doctor.PhoneNumber</i></li>
                        <li class="list-group-item"><i class="fa fa-envelope"> : @doctor.Email</i></li>
                        <li class="list-group-item"><i class="fa fa-id-card"> : @doctor.Department.Name</i></li>
                    </ul>
                </div>
            </div>

        }
        }
        else
        {
        }

    </div>
</div>

<hr />